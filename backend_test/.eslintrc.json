{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics" : "readonly",
        "SharedArrayBuffer" : "readonly"
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style" : 0,
        "no-unused-vars" : ["warn",{
                                    "vars": "all",
                                    "args": "after-used",
                                    "ignoreRestSiblings": false}]
    }
}
